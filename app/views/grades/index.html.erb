<%= render 'search' %>
<div class="pb-3 pt-3">
  <%= link_to new_grade_path, class: 'btn btn-primary btn-sm',
              data: { toggle: 'tooltip'}, title: t('.new_grade'), 'data-placement' => 'right' do %>
    <i class="fas fa-graduation-cap fa-2x"></i>
    <i class="fas fa-plus fa-2x"></i>
  <% end %>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('.code') %></th>
        <th scope="col"><%= t('.school_name') %></th>
        <th scope="col"><%= t('.year') %></th>
        <th scope="col"><%= t('.week_day') %></th>
        <th scope="col"><%= t('.hours') %></th>
        <th scope="col"><%= t('.options') %></th>
      </tr>
    </thead>
    <tbody>
      <% @grades.each do |grade| %>
        <tr  class="text-muted">
          <td><%= grade.code %></td>
          <td><%= grade.school_name %></td>
          <td><%= grade.year %></td>
          <td><%= grade.weekday_text.join(' - ') %></td>
          <td><%= grade.hour_start %> - <%= grade.hour_end %></td>
          <td>
            <%= link_to grade_path(grade), class: 'btn  btn-sm text-muted',
                        data: { toggle: 'tooltip'}, title: t('.show'), 'data-placement' => 'right' do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_grade_path(grade), class: 'btn btn-sm text-muted',
                        data: { toggle: 'tooltip'}, title: t('.edit'), 'data-placement' => 'right' do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to grade, method: :delete, data: { confirm: t('.are_you_sure'), toggle: 'tooltip' }, class: 'btn btn-sm text-muted',
                               title: t('.delete'), 'data-placement' => 'right' do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination justify-content-center">
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>
<%= link_to t('.home'), root_path, class: "btn btn-secondary my-2" %>
